//C Program to check whether the given integer is positive or negative

#include <stdio.h>
 
void main()
{
    int n;
 
    printf("Enter a number: \n");
    scanf("%d", &num);
    if (n > 0)
        printf("%d is a positive number \n", n);
    else if (num < 0)
        printf("%d is a negative number \n", n);
    else
        printf("0 is neither positive nor negative");
}
